<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">
	<persistence-unit name="groupeA6-LOCAL"
		transaction-type="RESOURCE_LOCAL">
		<class>be.helha.aemt.groupeA6.entities.Enseignant</class>
		<properties>
			<!-- <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/> -->
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/dba6" />
			<property
				name="jakarta.persistence.schema-generation.database.action"
				value="create" />
			<property name="jakarta.persistence.jdbc.user" value="ga6" />
			<property name="jakarta.persistence.jdbc.password"
				value="test" />
		</properties>
	</persistence-unit>

	<persistence-unit name="groupeA6-JTA"
		transaction-type="JTA">
		<jta-data-source>jdbc/groupeA6</jta-data-source>
		<class>be.helha.aemt.groupeA6.entities.Enseignant</class>
		<properties>
			
		</properties>
	</persistence-unit>
</persistence>